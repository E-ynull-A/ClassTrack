@model LoginVM


<link rel="stylesheet" href="~/css/login.css">
<div class="container">
    <form method="post">
        <div class="card login-card" style="width:450px;height:400px">
            <div class="h1">Giriş</div>
            <div class="muted">Email və şifrə ilə daxil ol.</div>

            <div class="label">Email</div>
            <input class="input" asp-for="UsernameOrEmail" id="email" />
            <span style="margin-top:20px" asp-validation-for="UsernameOrEmail" class="help-block text-danger"></span>

            <div class="label">Şifrə</div>
            <input class="input" asp-for="Password" id="password" type="password" placeholder="••••••••" />
            <span style="margin-top:20px" asp-validation-for="Password" class="help-block text-danger"></span>
           
            <div style="margin-top:8px">
                <span class="text-warning">
                    <a asp-action="Forget">Forget Password?</a>
                </span>
            </div>
          

            <div class="row" style="margin-top:14px">
                <button class="btn primary" id="btnLogin">Login</button>
            </div>
        </div>

        <div style="margin:10px" asp-validation-summary="ModelOnly" class="help-block text-danger"></div>
    </form>

</div>

<div class="toast" id="toast"><div class="t"></div><div class="d"></div></div>
<script src="~/js/login.js"></script>


