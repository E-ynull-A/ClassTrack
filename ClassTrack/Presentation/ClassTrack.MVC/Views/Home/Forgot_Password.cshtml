@model GetEmailForTokenVM
@{
    Layout = null;
}
<link rel="stylesheet" href="~/assets/css/forget-password.css">
<div class="auth-container">
    <div class="card">
        <h2>Forgot Password</h2>
        <p class="muted">Enter your email to receive reset link</p>

        <form id="forgotForm" method="post" asp-action="Forget">
            <div class="field">
                <label>Email</label>
                <input type="email" asp-for="Email" required>
                <small class="error" id="emailError"></small>
            </div>

            <button class="btn primary">
                Send Reset Link
            </button>
        </form>

        <div class="bottom-link">
            <a asp-action="Login">Back to Login</a>
        </div>
    </div>
</div>

