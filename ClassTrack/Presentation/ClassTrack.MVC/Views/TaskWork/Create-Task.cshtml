@model PostTaskWorkVM


<link rel="stylesheet" href="~/css/create-task.css" />
<section class="task-form-card">
    <h2>Create Task</h2>
    <form id="postTaskForm" enctype="multipart/form-data" method="post" asp-action="Post" asp-route-classRoomId="@ViewContext.RouteData.Values["classRoomId"]" >
       
        <div class="form-group">           
            <input type="hidden" id="ClassRoomId" asp-for="ClassRoomId" value="@ViewContext.RouteData.Values["classRoomId"]" required>
        </div>

       
        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" id="Title" asp-for="Title" required>
        </div>

        
        <div class="form-group">
            <label for="MainPart">Main Part</label>
            <textarea id="MainPart" asp-for="MainPart" rows="5" required></textarea>
        </div>

        
        <div class="form-group date-group">
            <div>
                <label for="StartDate">Start Date</label>
                <input type="date" id="StartDate" asp-for="StartDate" required>
            </div>
            <div>
                <label for="EndDate">End Date</label>
                <input type="date" id="EndDate" asp-for="EndDate" required>
            </div>
        </div>

        
        <div class="form-group">
            <label for="AttachmentDTOs">Add Files</label>
            <input class="custom-file-input" type="file" id="AttachmentDTOs" style="padding:7px 10px"                
                        asp-for="AttachmentVM.Files" accept=".jpg,.jpeg,.png,.pdf,.txt" multiple>
            
        </div>

        
        <div class="form-group">
            <button type="submit">Create Task</button>
        </div>
        <div asp-validation-summary="ModelOnly">

        </div>
    </form>
</section>
