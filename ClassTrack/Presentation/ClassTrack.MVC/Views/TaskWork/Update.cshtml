@model PutTaskWorkVM

<link href="~/assets/css/task-update.css" rel="stylesheet" />

<div class="task-container">
    <h1 class="task-title">Edit Task</h1>
    <form id="putTaskForm" class="task-form" method="post"
          asp-action="Update"
          asp-route-classRoomId="@Context.GetRouteValue("classRoomId")"
          asp-route-id="@Context.GetRouteValue("id")">

        <div class="task-field">
            <label class="task-label" for="title">Title</label>
            <input class="task-input" asp-for="Title" placeholder="Enter task title" />
        </div>

        <div class="task-field">
            <label class="task-label" for="mainPart">Description</label>
            <textarea class="task-textarea" asp-for="MainPart" placeholder="Enter task details"></textarea>
        </div>

        <div class="task-field">
            <label class="task-label" for="startDate">Start Date</label>
            <input class="task-datetime" asp-for="StartDate" type="datetime-local" />
        </div>

        <div class="task-field">
            <label class="task-label" for="endDate">End Date</label>
            <input class="task-datetime" asp-for="EndDate" type="datetime-local" />
        </div>

        <div class="task-button-container">
            <button type="submit" class="task-btn">Update Task</button>
        </div>
    </form>
</div>