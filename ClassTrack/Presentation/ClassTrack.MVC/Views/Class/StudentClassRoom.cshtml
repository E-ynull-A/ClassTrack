@model GetClassRoomWithPermissionVM
<link rel="stylesheet" href="~/assets/css/student-classroom.css">

<div class="topbar glass">
    <div class="topbar-left">
        <h1 class="title">@Model.ClassRoom.Name</h1>
        <div class="role-line">
            Role:
            <span class="badge badge-student">Student</span>
        </div>
    </div>

    <div class="topbar-right">
        <div class="account">
            <form asp-controller="Class"
                  asp-action="LeaveToken"
                  asp-route-classRoomId="@Model.ClassRoom.Id"
                  method="post"
                  onsubmit="return confirm('Are you sure to exit this Class Room?\nConfirm this action with your Email');">

                <button type="submit" class="btn danger full">
                    ⇦ Leave Class
                </button>
            </form>
            </div>
        </div>
    </div>
</div>

<div class="grid">
    <div class="card info">
        <h2>Class Info</h2>

        <div class="info-row">
            <span>Class Code</span>
            <code>@Model.ClassRoom.PrivateKey</code>
        </div>

        <div class="info-row">
            <span>Members</span>
            <strong>@Model.ClassRoom.MemberCount</strong>
        </div>
    </div>

    <div class="card actions">
        <h2>Quick Actions</h2>
      
        <div class="action-grid">
            <a class="btn primary"
               asp-controller="Quiz" asp-action="Index" asp-route-id="@Model.ClassRoom.Id">
                📘 Quizzes
            </a>

            <a class="btn ok"
               asp-controller="Quiz" asp-action="MyResults" asp-route-classRoomId="@Model.ClassRoom.Id">
                📊 My Quiz Results
            </a>

            <a class="btn info"
               asp-controller="TaskWork" asp-action="Get" asp-route-classRoomId="@Model.ClassRoom.Id">
                📝 Tasks
            </a>

            <a class="btn"
               asp-controller="Task" asp-action="MySubmissions" asp-route-classRoomId="@Model.ClassRoom.Id">
                📂 My Task Results
            </a>
        </div>
    </div>
</div>
<script defer src="~/assets/js/student-classroom.js"></script>