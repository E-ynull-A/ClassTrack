
<link rel="stylesheet" href="~/css/quiz-editor.css">

<div class="topbar">
    <div>
        <div class="h1">Quiz Editor</div>
        <div class="muted">Teacher sual əlavə edir / düzəldir.</div>
    </div>
    <div class="nav">
        <a class="btn" href="class.html">← Back to Class</a>
        <button class="btn ok" id="btnSave">Save (MVC POST)</button>
    </div>
</div>

<div class="card">
    <div class="h2">Quiz Info</div>
    <div class="row">
        <div class="field">
            <div class="label">Title</div>
            <input class="input" id="quizTitle" value="TCP Basics" />
        </div>
        <div class="field">
            <div class="label">Description</div>
            <input class="input" id="quizDesc" value="Core concepts of TCP" />
        </div>
    </div>
</div>

<div class="card" style="margin-top:16px">
    <div class="row head">
        <div>
            <div class="h2">Questions</div>
            <div class="muted">Dinamik sual əlavə etmə (UI). Server-side save sənindir.</div>
        </div>
        <button class="btn primary" id="btnAddQ">+ Add Question</button>
    </div>

    <div class="line"></div>

    <div id="questions"></div>
</div>

<template id="tplQuestion">
    <div class="qcard">
        <div class="row qtop">
            <div class="grow">
                <div class="label">Question text</div>
                <input class="input qText" placeholder="Sual mətni..." />
            </div>
            <div class="mini">
                <div class="label">Type</div>
                <select class="select qType">
                    <option value="MCQ">MCQ</option>
                    <option value="TrueFalse">True/False</option>
                    <option value="Short">Short Answer</option>
                </select>
            </div>
            <div class="mini">
                <div class="label">Points</div>
                <input class="input qPoints" type="number" min="1" value="1" />
            </div>
        </div>

        <div class="choices">
            <div class="label">Choices (MCQ)</div>
            <div class="choice-list"></div>
            <button class="btn" data-act="addChoice">+ Add choice</button>
        </div>

        <div class="row qactions">
            <button class="btn danger" data-act="removeQ">Remove</button>
        </div>
    </div>
</template>

<template id="tplChoice">
    <div class="choice">
        <input class="input cText" placeholder="Variant..." />
        <label class="chk"><input type="checkbox" class="cCorrect" /> Correct</label>
        <button class="btn danger sm" data-act="removeChoice">X</button>
    </div>
</template>

<div class="toast" id="toast"><div class="t"></div><div class="d"></div></div>

<script src="quiz-editor.js"></script>
